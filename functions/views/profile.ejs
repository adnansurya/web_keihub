<!DOCTYPE html>
<html>
	<head>
    <%- include('all/meta'); -%>
		<title>KEIHUB</title>
    <%- include('all/css'); -%>
	</head>
	<body class="skin-all">
		<header class="primary">

      <%- include('all/header'); -%>
			<!-- Start nav -->
			<%- include('all/nav'); -%>
			<!-- End nav -->
		</header>

		<section class="home">
			<div class="container">
				<h3>Halaman Edit Profil</h3>
				<p><b>Halaman Khusus untuk mengedit info akun Penulis KEIHUB</b></p>
				<br>
				<h6>Info Umum</h6>
				<img src="http://www.personalbrandingblog.com/wp-content/uploads/2017/08/blank-profile-picture-973460_640.png" width="100px" height="100" alt="Default Profile Picture">
				<form action="/action_page.php"><label></label>
					<input type="file" name="profilepicture_pic" accept="image/jpeg" multiple>
					<p>Format Profile adalah .jpeg dengan ukuran 100 x 100 pixels</p>
				</form>
				<br>
				<div class="form-group floating stacked">
					<label>Nama Lengkap</label>
					<input type="text" class="form-control">
				</div>
				<hr>
				<h6>Tentang Saya</h6>
				<p><b>Bio Singkat</b></p>
				<div class="form-group floating stacked">
					<textarea rows="5" cols="151" maxlength="200"></textarea>
					<p>Batas Maksimal Karater Hanya 200</p>
				</div>
				<hr>
				<h6>Keamanan</h6>
				<br>
				<div class="form-group floating stacked">
					<label>Email</label>
					<input type="email" class="form-control">
				</div>
				<br>
				<div class="form-group floating stacked">
					<label>Password</label>
					<input type="password" class="form-control">
				</div>
				<button class="btn btn-success" onclick="swal('Sukses', 'Info akun anda berhasil diubah', 'success');">Simpan</button>
				<button class="btn btn-danger" onclick="swal({
						title: 'Anda Yakin?',
						text: 'Halaman akan direset dan tidak dapat dikembalikan',
						type: 'warning',
						showCancelButton: true,
						confirmButtonColor: '#3085d6',
						cancelButtonColor: '#d33',
						confirmButtonText: 'Lanjutkan'
						}).then(function () {
						swal(
						'Sukses',
						'Perubahan Akun anda dibatalkan',
						'success'
						)
					})">Batal</button>
			</div>
		</section>

		<!-- Start footer -->
    <%- include('all/footer'); -%>
		<!-- End Footer -->

		<!-- JS -->
    <%- include('all/script'); -%>
	</body>
</html>
